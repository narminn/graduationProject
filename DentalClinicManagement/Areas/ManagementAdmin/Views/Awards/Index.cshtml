@model IEnumerable<DentalClinicManagement.Models.Award>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementAdmin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="col-md-12 col-sm-12">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    Award Name
                </th>
                <th>
                    Award Price
                </th>
                <th>
                    Award Date
                </th>
                <th>
                    Doctor Fullname
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.award_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.award_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.award_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.doctor_fullname)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
