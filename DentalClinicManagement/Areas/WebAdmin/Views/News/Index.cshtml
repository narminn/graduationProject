@model IEnumerable<DentalClinicManagement.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/WebAdmin/Views/Shared/_Layout.cshtml";
}

<h2>News</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
        <div class="col-md-12 col-sm-12">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            News Title
                        </th>
                        <th>
                            News Content
                        </th>
                        <th>
                            News Date
                        </th>
                        <th>
                            News Photo
                        </th>
                        <th></th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.news_title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.news_content)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.news_date)
                        </td>
                        <td>
                            <img src="@item.news_photo" style="max-width:100%;max-height:200px;" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
